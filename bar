 let elapsed = 0; // Start at 0 seconds
  const maxSeconds = 60; // Total duration in seconds

  function formatTime(seconds) {
    const hours = Math.floor(seconds / 3600);
    const minutes = Math.floor((seconds % 3600) / 60);
    const secs = seconds % 60;
    return `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
  }

  function updateDisplay() {
    // Update time display
    const currentTimeStr = formatTime(elapsed);
    const maxTimeStr = formatTime(maxSeconds);
    document.querySelector('.time').textContent = `${currentTimeStr} / ${maxTimeStr}`;

    // Update progress bar width
    const percentage = (elapsed / maxSeconds) * 100;
    document.querySelector('.progress-bar').style.width = percentage + '%';

    // Increment elapsed time and reset if complete
    elapsed++;
    if (elapsed > maxSeconds) {
      elapsed = 0;
    }
  }

  // Set initial date
  const today = new Date();
  const month = today.getMonth() + 1; // Months are 0-based
  const day = today.getDate();
  document.querySelector('.date').textContent = `${month}/${day}`;

  // Initial update
  updateDisplay();

  // Update every second
  setInterval(updateDisplay, 1000);


.flex-row {
    display: flex;
    flex-direction: row;
  }

  .progress-bar-container {
    flex: 1;
    height: 5px;
    background-color: #003366; /* Dark blue for unfilled part */
    position: relative;
  }

  .progress-bar {
    height: 100%;
    background-color: #66ccff; /* Light blue for filled part */
    width: 0%; /* Initially 0% */
    transition: width 1s linear; /* Smooth transition over 1 second */
  }

  .text-container {
    width: 180px; /* Static width for text */
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .time, .date {
    text-align: center;
    color: black;
  }
